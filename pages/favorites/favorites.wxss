/* pages/favorites/favorites.wxss */
.empty{
  margin: 50% 0rpx;
  text-align: center;
  font-size: 50rpx;
  
}

.add{
  color: blue;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cover {
  width: 35%;
  float: left;
}
image {
  width: 200rpx;
  height: 200rpx;
  padding: 10% 10% 5% 15%;
}
.introduction {
  width: 65%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  color: black;
}
.title{
  font-size: 50rpx;
  padding-bottom:40rpx; 
}
.author{
  font-size: 40rpx;
  color: blue;
}
.down {
  background-color: #b6eaf3d0;
}
.down view {
  color: black;
}
.desc {
  font-size: 30rpx;
  padding: 20rpx 10rpx;
}
.del {
  width: 50%;
  text-align: center;
  font-size: 40rpx;
  background-color: yellow;
  padding: 15rpx 0;
  float: left
}
.read{
  text-align: center;
  font-size: 40rpx;
  background-color: yellow;
  padding: 15rpx 0;
}

.total {
  width: 95%;
  background-color: rgba(125, 196, 238, 0.637);
  margin: 20rpx 0 0 0;
  border-radius: 20rpx;
}
/*清除浮动样式*/
.clearfix {
  zoom: 1;
  clear: both;
}
.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}
.hidden {
  display: none;
}